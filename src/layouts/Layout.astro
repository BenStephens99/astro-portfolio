---
import { ViewTransitions } from "astro:transitions";
import Header from "../components/Header.svelte";
import { getHomeSections } from "../utils/sanity";

interface Props {
	title: string;
}

const currentPath = Astro.url.pathname.split("/")[1] || "/";

const { title } = Astro.props;

let homeSections = await getHomeSections();
homeSections.sort((a, b) => a.sortIndex - b.sortIndex);
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Front-end developer specialising in fast, accessible, and SEO-optimized websites & applications. Expert in React, JavaScript, and modern web technologies. Based in Brighton, UK" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/x-icon" href="/favicon.ico?" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link href="https://fonts.googleapis.com/css2?family=Inter:wght@100..900&family=Montserrat:ital,wght@0,100..900;1,100..900&display=swap" rel="stylesheet">
		<link rel="sitemap" href="/sitemap-index.xml" />
		<ViewTransitions />
	</head>
	<body>
		<Header homeSections={homeSections} currentPath={currentPath} />
		<main transition:animate="fade">
			<slot />
		</main>
		<footer>
			<p>Â© Ben Stephens 2024</p>
		</footer>

		<style is:global lang="scss">
			:root {
				--content-width: 1450px;

				--primary: #3d3928;
				--secondary: #efede5;
				--accent: #be5d38;
				--accent-light: #ebe3db;
			}

			* {
				box-sizing: border-box;
			}

			body {
				background-color: var(--secondary);
				color: var(--primary);
				font-family: "Inter", sans-serif;
				margin: 0 auto;
				min-height: 100vh;
				display: flex;
				flex-direction: column;
				align-items: center;
				overflow-y: scroll;
				font-size: 18px;

				@media screen and (max-width: 650px) {
					font-size: 16px;
				}
			}

			main {
				display: flex;
				flex-direction: column;
				margin-bottom: 4rem;
				width: 100%;
			}

			footer {
				background-color: rgb(30, 30, 30);
				color: white;
				text-align: center;
				padding: 2rem;
				width: 100%;
				margin-top: auto;
			}

			h1,
			h2,
			h3,
			h4 {
				font-family: "Montserrat", sans-serif;
				margin: 0;
				font-weight: 300;
			}

			h1 {
				font-size: 60px;
				font-weight: 400;
				letter-spacing: -5px;
				margin-top: 3rem;

				.lighter {
					font-weight: 300;
				}

				@media screen and (max-width: 650px) {
					font-size: 40px;
					letter-spacing: -3px;
					margin: 1rem 0;
				}
			}

			h2 {
				font-weight: 400;
			}

			h3 {
				font-size: 1.4rem;
				font-weight: 600;
			}

			a {
				text-decoration: none;
				color: #3d3929;
				border-bottom: 2px solid transparent;
				transition: border-bottom 0.2s;
				width: fit-content;
				display: inline-block;

				&::after {
					content: "";
					display: block;
					width: 0;
					margin-top: 3px;
					height: 2px;
					background-color: var(--accent);
					transition: width 0.3s;
				}

				&:hover {
					&::after {
						width: 100%;
					}
				}

				&.no-underline {
					border-bottom: none;
					&::after {
						display: none;
					}
				}

				&.current-page {
					&::after {
						width: 100%;
					}
				}
			}

			.project article a {
				border-bottom: 1px solid var(--accent);
				transition: 0.3s;
				&::after {
					display: none;
				}

				&:hover {
					color: var(--accent);
				}
			}

			button a {
				border-bottom: none;
				color: inherit;

				&::after {
					display: none;
				}

				&:hover {
					border-bottom: none;
				}
			}

			button {
				font-weight: 600;
				border: none;
				padding: 10px 20px;
				border-radius: 5px;
				cursor: pointer;
				background: transparent;
				transition: 0.3s scale;
				width: fit-content;

				&:hover {
					scale: 1.05;
				}

				&:active {
					scale: 0.95;
				}
			}
			img {
				border-radius: 0.75rem;
			}

			p {
				line-height: 1.75rem;

				@media screen and (max-width: 650px) {
					line-height: 1.5rem;
				}
			}

			li {
				margin: 0.5rem 0;
				font-size: 1.1rem;
			}
		</style>
	</body>
</html>
