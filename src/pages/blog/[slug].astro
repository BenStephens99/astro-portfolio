---
import { getPost } from "../../utils/sanity";
import Layout from "../../layouts/Layout.astro";
import { urlFor } from "../../utils/image";
import { PortableText } from "astro-portabletext";

const { slug } = Astro.params;

const post = await getPost(slug);

const title = post.title;
const image = urlFor(post.image).width(800).auto('format').url();
const body = post.body;
---

<Layout title={title}>
  <div class="post">
    <div class="post-title">
      <a href="/blog" class="no-underline">
        <button>Back</button>
      </a>
      <h1><span class="lighter">{title}</span></h1>
    </div>
    <div class="post-content">
      <img src={image} alt={title} transition:name=`${title}-image` />
      <article>
        <PortableText value={body} />
      </article>
    </div>
  </div>
</Layout>

<style lang="scss">  
  .post {
    display: flex;
    flex-direction: column;
    gap: 1rem;
    width: 100%;
    max-width: var(--content-width);
    margin: 0 auto;
    padding: 2rem;
  }

  h1 {
    margin: 1rem 0;
  }

  .post-title {
    display: flex;
    justify-content: center;
    align-items: center;
    position: relative;

    a {
      position: absolute;
      left: 0px;
      top: 50%;
      transform: translateY(-50%);
    }
  }

  .post-content {
    width: 100%;
    max-width: 580px;
    align-self: center;
  }

  img {
    width: 100%;
    aspect-ratio: 10/7;
    object-fit: cover;
    margin: auto;
  }

  button {
    background-color: var(--accent);
    color: white;
  }
</style>
