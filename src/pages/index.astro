---
import Layout from "../layouts/Layout.astro";
import HomeSection from "../components/HomeSection.astro";
import { getHomeSections } from "../utils/sanity";

const homeSections = await getHomeSections();

---

<Layout title="Ben Stephens">
	<main>
		<div class="introduction">
			<h1><span class="lighter">Web</span> Developer</h1>
			<p>
				Hi, I'm Ben, a Brighton based Web Developer.
			</p>
			<p>
				I specialise in building fast, accessible, SEO-friendly and
				user-friendly websites & applications.
			</p>
		</div>
		<div class="home-sections">
			{homeSections.map((section) => (
				<HomeSection section={section} />
			))}
		</div>
	</main>
</Layout>

<style lang="scss">
	main {
		display: flex;
		flex-direction: column;
		gap: 4rem;
		align-items: center;
		max-width: var(--content-width);
		margin: auto;
		margin-bottom: 4rem;
	}

	.introduction {
		max-width: 800px;
		display: flex;
		flex-direction: column;
		align-items: center;
		text-align: center;

		h1 {
			font-size: 60px;
			font-weight: 400;
			letter-spacing: -5px;
			margin-bottom: 2rem;

			.lighter {
				font-weight: 300;
			}
		}

		p {
			font-size: 24px;
			margin: 0.5rem;
		}

		button {
			margin-top: 1.5rem;
			background-color: var(--accent);
			color: var(--secondary);
		}
	}

	.home-sections {
		display: grid;
		grid-template-columns: 1fr 1fr;
		gap: 2rem;
		max-width: 1000px;
		width: 100%;
		padding: 0rem 2rem;
	}
</style>
