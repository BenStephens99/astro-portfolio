---
import { urlFor } from "../utils/image";
import { PortableText } from "astro-portabletext";

const { section } = Astro.props;
---

<section class="home-section">
    <div>
        <div class="text">
            <h2>
                <a href={section.slug.current} class="no-underline">
                    {section.title}
                </a>
            </h2>
            <PortableText value={section.body} />
            <a href={section.slug.current} class="no-underline">
                <button>
                    {section.buttonText}
                </button>
            </a>
        </div>
    </div>
    <a href={section.slug.current} class="no-underline image">
        <img
            src={urlFor(section.image).width(900).auto("format").url()}
            alt="Hero Image"
        />
    </a>
</section>

<style lang="scss">
    .home-section {
        display: flex;
        align-items: center;

        > div, .image {
            width: 100%;
            height: 100%;
        }

        &:nth-child(odd) {
            flex-direction: row-reverse;

            .text {
                margin-left: 2rem;
            }
        }

        &:nth-child(even) {
            .text {
                margin-left: auto;
                margin-right: 2rem;
            }
        }
    }

    button {
        background-color: var(--accent);
        color: white;
    }

    h2 {
        font-weight: 500;
    }

    .text {
        max-width: 350px;
        display: flex;
        flex-direction: column;
        justify-content: center;
        height: 100%;
    }

    img {
        width: 100%;
        height: 100%;
        aspect-ratio: 5/3;
        object-fit: cover;
        border-radius: 0px;
        display: block;
    }

    @media screen and (max-width: 800px) {
        .home-section {
            margin: 0 2rem;

            &:nth-child(odd),
            &:nth-child(even) {
                flex-direction: column-reverse;

                .text {
                    margin: 0;
                    padding-top: 0.5rem;
                    padding-bottom: 2rem;
                    max-width: 100%;
                }
            }
        }
    }
</style>
