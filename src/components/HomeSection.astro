---
    import { urlFor } from '../utils/image';
    import { PortableText } from 'astro-portabletext'
    
    const { section } = Astro.props;

---

<section class="home-section">
    <div class="container">
        <div class="image-container">
            <img src={urlFor(section.image).width(700).url()} alt={section.title} />
        </div>
        <div class="text-container">
            <h2>{section.title}</h2>
            <PortableText value={section.body} />
            <button>
                <a href={section.slug}>{section.buttonText}</a>
            </button>
        </div>
    </div>
</section>

<style lang="scss">
    .home-section:nth-of-type(odd) {
        background-color: var(--primary);
        color: var(--secondary);

        button {
            background-color: var(--secondary);
            color: var(--primary);
        }
    }

    .home-section:nth-of-type(even) {
        background-color: var(--secondary);
        color: var(--primary);

        button {
            background-color: var(--primary);
            color: var(--secondary);
        }
    }

    img {
        aspect-ratio: 1/1;
        object-fit: cover;
        width: 100%;
    }

    .image-container {
        width: calc(100% / 3);
        padding: 1rem;
    }

    .text-container {
        width: calc(100% / 3 * 2);
        max-width: 500px;
        padding: 1rem;
    }

    .container {
        display: flex;
        max-width: var(--content-width);
        margin: 0 auto;
        padding: 2rem 1rem;
    }
</style>