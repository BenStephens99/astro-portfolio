--- 

import { getPosts } from "../utils/sanity";
import { urlFor } from "../utils/image";

const posts = await getPosts();

for (const post of posts) {
    post.image.url = urlFor(post.image).height(175).url();
}
--- 
<h2>Latest Posts</h2>
<ul class="post-list">
    {posts.map((post) => (
        <li>
            <a href={`/post/${post.slug.current}`} class="no-underline post-item">
                <datetime>{new Date(post.publishedAt).toLocaleDateString()}</datetime>
                <img src={post.image.url} alt={post.title} transition:name={`${post.title}-image`}/>    
                <h3>{post.title}</h3>
            </a>
        </li>
    ))}
</ul>

<style lang="scss">
    .post-list {
        display: flex;
        gap: 1rem;
        padding: 0px;

        li {
            list-style: none;
        }
    }

    .post-item {
        display: flex;
        flex-direction: column;
        gap: 0.5rem;

        h3 {
            margin: 0;
        }

        datetime {
            font-size: 0.8rem;
            font-weight: 600;
        }

        img {
            width: 100%;
            height: auto;
            object-fit: cover;
        }
    }
</style>